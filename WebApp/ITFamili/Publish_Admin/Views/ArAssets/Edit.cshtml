@model Models.ArAsset

@{
    ViewBag.Title = "ویرایش " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/BackEndLayout/_BackEndLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "ArAssets",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.InputSize)

        <div class="form-group">
            @Html.LabelFor(model => model.InputImageUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.Kendo().Upload().Name("fileUpload").Multiple(false)
	 @Html.HiddenFor(model => model.InputImageUrl)
                @Html.ValidationMessageFor(model => model.InputImageUrl)
            </div>
        </div>
			 

        <div class="form-group">
            @Html.LabelFor(model => model.OutPutType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.OutPutType)
                @Html.ValidationMessageFor(model => model.OutPutType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OutputFileUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
							@Html.Kendo().Upload().Name("fileUploadFile").Multiple(false)
							@Html.HiddenFor(model => model.OutputFileUrl)
                @Html.ValidationMessageFor(model => model.OutputFileUrl)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MagzineId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MagzineId", String.Empty)
                @Html.ValidationMessageFor(model => model.MagzineId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
        </div>

	 @Html.HiddenFor(model => model.CreationDate)
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                                  @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    </div>
}

